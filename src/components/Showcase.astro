---
const { heading, description } = Astro.props as Props;

interface Props {
  heading: string;
  description: string;
}
---

<section>
  <h1>{heading}</h1>
  <p>{description}</p>
</section>

<style>
  section {
    display: flex;
    align-items: center;
    flex-direction: column;
    background-image: linear-gradient(#494949, rgb(158, 158, 158));
    border: none;
    margin: 0px;
    padding: 40px;
    height: 200px;
    color: white;
    text-align: center;
  }

  h1 {
    font-size: 3rem;
  }
</style>
