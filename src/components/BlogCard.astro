---
const { title, slug, excerpt, date, author } = Astro.props as Props;

interface Props {
  title: string;
  slug: string;
  excerpt: string;
  date: string;
  author: string;
}
---

<div class='container'>
  <h1>{title}</h1>
  <h4>Written by {author} on {new Date(date).toLocaleDateString()}</h4>
  <p class='excerpt'>{excerpt}</p>
  <a class='btn' href={`/blog/${slug}`}>Read More</a>
</div>

<style>
  .container {
    width: 300px;
    height: 300px;
    background-color: black;
    border: 1px solid #000;
    border-radius: 5px;
    box-shadow: 0 0 10px #000;
    padding: 10px;
    margin: 10px;
  }

  .excerpt {
    padding: 10px;
  }
</style>
